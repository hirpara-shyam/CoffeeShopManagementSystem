                <span>Order Table</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link collapsed" asp-action="Index" asp-controller="OrderDetail" asp-area="">
                @* <i class="bi bi-circle"></i> *@
                <i class="bi bi-card-list"></i>
                <span>OrderDetail Table</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link collapsed" asp-action="Index" asp-controller="Bills" asp-area="">
                @* <i class="bi bi-circle"></i> *@
                <i class="bi bi-receipt-cutoff"></i>
                <span>Bills Table</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link " asp-action="Index" asp-controller="User" asp-area="">
                @* <i class="bi bi-circle"></i> *@
                <i class="bi bi-people"></i>
                <span>User Table</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link collapsed" asp-action="Index" asp-controller="City" asp-area="">
                @* <i class="bi bi-circle"></i> *@
                <i class="bi bi-people"></i>
                <span>City Table</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link collapsed" asp-action="Index" asp-controller="State" asp-area="">
                @* <i class="bi bi-circle"></i> *@
                <i class="bi bi-people"></i>
                <span>State Table</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link collapsed" asp-action="Index" asp-controller="Country" asp-area="">
                @* <i class="bi bi-circle"></i> *@
                <i class="bi bi-people"></i>
                <span>Country Table</span>
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link collapsed" asp-action="Logout" asp-controller="Login" asp-area="">
                <i class="bi bi-box-arrow-left"></i>
                <span>Logout</span>
            </a>
        </li>

    </ul>

</aside><!-- End Sidebar-->

<main class="main" id="main">
    <div class="container">

        <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                        <div class="d-flex justify-content-center py-4">
                            <a href="index.html" class="logo d-flex align-items-center w-auto">
                                <img src="~/img/logo.png" alt="">
                                <span class="d-none d-lg-block">CoffeeHouse</span>
                            </a>
                        </div><!-- End Logo -->

                        <div class="card mb-3" style="width:150%">

                            <div class="card-body">

                                <div class="pt-4 pb-2">
                                    <h5 class="card-title text-center pb-0 fs-4">Users Form</h5>
                                    <h6 class=" text-center pb-0 fs-4">@ViewBag.AddOrEdit User</h6>
                                </div>

                                <form asp-action="UserSave" asp-controller="User" method="post" class="row g-3 needs-validation" novalidate>
                                    @Html.HiddenFor(x => x.UserID)
                                    <div class="col-12">
                                        <label class="form-label"><span class="text-danger">*</span>User Name</label>
                                        <input asp-for="UserName" type="text" class="form-control" required>
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>

                                    <div class="col-12">
                                        <label class="form-label"><span class="text-danger">*</span>Email</label>
                                        <input asp-for="Email" type="email" class="form-control" required>
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="col-12">
                                        <label class="form-label"><span class="text-danger">*</span>Password</label>
                                        <input asp-for="Password" type="password" class="form-control" required>
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>

                                    <div class="col-12">
                                        <label class="form-label"><span class="text-danger">*</span>Mobile No.</label>
                                        <input asp-for="MobileNo" type="text" class="form-control" required>
                                        <span asp-validation-for="MobileNo" class="text-danger"></span>
                                    </div>

                                    <div class="col-12">
                                        <label class="form-label"><span class="text-danger">*</span>Address</label>
                                        @* <input asp-for="Address" type="text" class="form-control" required> *@
                                        <textarea asp-for="Address" class="form-control" required></textarea>
                                        <span asp-validation-for="Address" class="text-danger"></span>
                                    </div>

                                    <div class="col-12">
                                        <label class="form-label"><span class="text-danger">*</span>IsActive</label>
                                        @* <input asp-for="IsActive" type="text" class="form-control" required> *@
                                        <div class="col-sm-10 d-flex">
                                            <div class="form-check me-3">
                                                <input type="radio" asp-for="IsActive" id="isActiveYes" value="true" class="form-check-input" />
                                                <label for="isActiveYes" class="form-check-label">Yes</label>
                                            </div>
                                            <div class="form-check">
                                                <input type="radio" asp-for="IsActive" id="isActiveNo" value="false" class="form-check-input" />
                                                <label for="isActiveNo" class="form-check-label">No</label>
                                            </div>

                                        <span asp-validation-for="IsActive" class="text-danger"></span>
                                    </div>

                                    <div class="col-12 d-flex" style="margin:40px auto 10px auto">
                                        <button class="btn btn-primary w-100" type="submit">Submit</button>
                                        <a asp-action="Index" asp-controller="User" asp-area="" class="btn w-100">Cancel</a>
                                    </div>
                                </form>

                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </section>

    </div>
</main>
<script>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</script>