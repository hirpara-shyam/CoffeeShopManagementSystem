<main class="main" id="main">
    <div class="container">

        <section class="section register min-vh-100 d-flex flex-column align-items-center justify-content-center py-4">
            <div class="container">
                <div class="row justify-content-center">
                    <div class="col-lg-4 col-md-6 d-flex flex-column align-items-center justify-content-center">

                        <div class="d-flex justify-content-center py-4">
                            <a href="index.html" class="logo d-flex align-items-center w-auto">
                                <img src="~/img/logo.png" alt="">
                                <span class="d-none d-lg-block">CoffeeHouse</span>
                            </a>
                        </div><!-- End Logo -->

                        <div class="card mb-3" style="width:150%">

                            <div class="card-body">

                                <div class="pt-4 pb-2">
                                    <h5 class="card-title text-center pb-0 fs-4">Customer Form</h5>
                                    <h6 class=" text-center pb-0 fs-4">@ViewBag.AddOrEdit Customer</h6>
                                </div>

                                <form asp-action="CustomerSave" asp-controller="Customer" method="post" class="row g-3">
                                    @Html.HiddenFor(x => x.CustomerID)
                                    <input type="hidden" asp-for="CustomerID" />
                                    <div class="col-12">
                                        <label for="projectName" class="form-label"><span class="text-danger">*</span>Customer Name</label>
                                        <input asp-for="CustomerName" type="text" class="form-control" >
                                        <span asp-validation-for="CustomerName" class="text-danger"></span>
                                    </div>

                                    <div class="col-12">
                                        <label for="projectName" class="form-label"><span class="text-danger">*</span>Home Address</label>
                                        @* <input asp-for="HomeAddress" type="text" class="form-control" > *@
                                        <textarea asp-for="HomeAddress" class="form-control"></textarea>
                                        <span asp-validation-for="HomeAddress" class="text-danger"></span>
                                    </div>

                                    <div class="col-12">
                                        <label for="projectName" class="form-label"><span class="text-danger">*</span>Email</label>
                                        <input asp-for="Email" type="email" class="form-control" >
                                        <span asp-validation-for="Email" class="text-danger"></span>
                                    </div>

                                    <div class="col-12">
                                        <label for="projectName" class="form-label"><span class="text-danger">*</span>Mobile No.</label>
                                        <input asp-for="MobileNo" type="text" class="form-control" >
                                        <span asp-validation-for="MobileNo" class="text-danger"></span>
                                    </div>

                                    <div class="col-12">
                                        <label for="projectName" class="form-label"><span class="text-danger">*</span>GST No.</label>
                                        <input asp-for="GSTNo" type="text" class="form-control" >
                                        <span asp-validation-for="GSTNo" class="text-danger"></span>
                                    </div>

                                    <div class="col-12">
                                        <label for="projectName" class="form-label"><span class="text-danger">*</span>City Name</label>
                                        <input asp-for="CityName" type="text" class="form-control" >
                                        <span asp-validation-for="CityName" class="text-danger"></span>
                                    </div>

                                    <div class="col-12">
                                        <label for="projectName" class="form-label"><span class="text-danger">*</span>Pincode</label>
                                        <input asp-for="PinCode" type="text" class="form-control" >
                                        <span asp-validation-for="PinCode" class="text-danger"></span>
                                    </div>

                                    <div class="col-12">
                                        <label for="projectName" class="form-label"><span class="text-danger">*</span>Net Amount</label>
                                        <input asp-for="NetAmount" type="text" class="form-control" >
                                        <span asp-validation-for="NetAmount" class="text-danger"></span>
                                    </div>

                                    <div class="col-12">
                                        <label for="budget" class="form-label"><span class="text-danger">*</span>User ID</label>
                                        @* <select class="form-control" asp-for="UserID">
                                        <option value="">Select User</option>
                                        @foreach (var user in ViewBag.UserList)
                                        {
                                        <option value="@user.UserID">@user.UserName</option>
                                        }
                                        </select> *@
                                        <select class="form-control" asp-for="UserID" asp-items="@(new SelectList(ViewBag.UserList, "UserID", "UserName"))">
                                            <option value="">Select User</option>
                                        </select>
                                        <span asp-validation-for="UserID" class="text-danger"></span>
                                    </div>

                                    <div class="col-12 d-flex" style="margin:40px auto 10px auto">
                                        <button class="btn btn-primary w-100" type="submit">Submit</button>
                                        <a asp-action="Index" asp-controller="Customer" asp-area="" class="btn w-100">Cancel</a>
                                    </div>
                                </form>

                            </div>
                        </div>

                    </div>
                </div>
            </div>

        </section>

    </div>
</main>

<script>
    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</script>